{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@services/*": ["services/*"],
      "@contexts/*": ["contexts/*"],
      "@pages/*": ["pages/*"],
      "@styles/*": ["styles/*"],
      "@constants/*": ["constants/*"],
      "@data/*": ["data/*"],
      "@layout/*": ["layout/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "tsconfig.node.json" }]
}
